@page "/"

<PageTitle>Home</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Hello, slot @(IsVersionB ? "B" : "A")</MudText>

<MudNavMenu>
    <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">Home</MudNavLink>
    @if (IsVersionB)
    {
        <MudNavLink Href="makequickreservation" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.List">Make quick reservation</MudNavLink>
    }
    else
    {
        <MudNavLink Href="makecompletereservation" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.List">Make complete reservation</MudNavLink>
    }
</MudNavMenu>

@code
{
    protected bool IsVersionB { get; set; }

    [Inject] private IConfiguration _configuration { get; set; }

    protected override void OnInitialized()
    {
        IsVersionB = Convert.ToBoolean(_configuration["VersionB"]);
    }
}
